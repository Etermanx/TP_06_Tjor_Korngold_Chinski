<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Titulo | Olympics.com</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index")">
                    <img src="~/img/logo_color.svg" alt="Logo">
                </a>
                <button
                    class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav flex-grow-1 d-sm-inline-flex justify-content-center">
                        <li class="nav-item"><a class="nav-link text-dark" href="@Url.Action("Historia")">Historia</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" href="@Url.Action("Deportes")">Deportes</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" href="@Url.Action("Paises")">Países</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" href="@Url.Action("AgregarDeportista")">Agregar deportista</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" href="@Url.Action("Creditos")">Créditos</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main" class="pb-3">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="footer border-top text-muted bg-dark">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <img src="~/img/logo_white.svg" width="80%" alt="Logo">
                </div>
                <div class="col-sm-3">
                    <h2></h2>
                </div>
            </div>
            <p>&copy;Korngold-Tjor-Chinski</p>
        </div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
